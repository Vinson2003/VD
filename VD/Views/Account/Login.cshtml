@model VD.Models.LoginVM
@{
	ViewData["Title"] = "LOGIN";
	<title>LOGIN</title>
	Layout = "~/Views/Shared/_Layout2.cshtml";
}

<div class="d-flex flex-column flex-root">
	<div class="d-flex flex-column flex-column-fluid bgi-position-y-bottom position-x-center bgi-no-repeat bgi-size-contain bgi-attachment-fixed" @*style="background-image: url(assets/media/illustrations/sketchy-1/14.png)"*@>
		<div class="d-flex flex-center flex-column flex-column-fluid p-10 pb-lg-20">
			<h1 class="text-dark fw-bolder mb-5">Welcome to VD Projects</h1>
			<div class="w-lg-500px bg-body rounded shadow-sm p-10 p-lg-15 mx-auto">
				<form action="@Url.Action("Login","Account")" method="post" class="form w-100" novalidate="novalidate">
					<div class="text-center mb-10">
						<h1 class="text-dark mb-3">Sign In</h1>
						@*<div class="text-gray-400 fw-bold fs-4">New Here?*@
						@*<a href="#" class="link-primary fw-bolder">Create an Account</a></div>*@
					</div>

					<div asp-validation-summary="All" class="text-danger text-center"></div>

					<div class="fv-row mb-10">
						<label class="form-label fs-6 fw-bolder text-dark">Username</label>
						<input asp-for="Username" class="form-control form-control-lg form-control-solid" type="text" autocomplete="off" />
					</div>
					<div class="fv-row mb-10">
						<div class="d-flex flex-stack mb-2">
							<label class="form-label fw-bolder text-dark fs-6 mb-0">Password</label>
							@*<a href="#" class="link-primary fs-6 fw-bolder">Forgot Password ?</a>*@
						</div>
						<input asp-for="Password" class="form-control form-control-lg form-control-solid" type="password" autocomplete="off" />
					</div>

					<div class="text-center">
						<button type="submit" id="kt_sign_in_submit" class="btn btn-lg btn-primary w-100 mb-5">
							<span class="indicator-label">Login</span>
							<span class="indicator-progress">
								Please wait...
								<span class="spinner-border spinner-border-sm align-middle ms-2"></span>
							</span>
						</button>
					</div>
				</form>
			</div>
		</div>
		<div class="d-flex flex-center flex-column-auto p-10">
		</div>
	</div>
</div>