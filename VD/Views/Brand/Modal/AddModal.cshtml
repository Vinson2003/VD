<!-- Modal Add -->
<div class="modal fade" id="BrandAddModal" tabindex="-1" role="dialog" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">

        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">Add Brand</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <form id="BrandAddForm" method="post" autocomplete="off">
                    <div class="row">
                        <div class="col mb-3">
                            <label for="Brand">Brand Name</label>
                            <input type="text" class="form-control" id="BrandName" name="Name" placeholder="Brand Name" required>
                        </div>
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-outline-success" onclick="submitBrandAdd()">Submit</button>
            </div>

        </div>
    </div>
</div>