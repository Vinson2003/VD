@using VD.Helper;
@{
    ViewData["Title"] = "Brand";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card mb-5 mb-xl-8">
    <!--begin::Header-->
    <div class="card-header border-0 pt-5">
        <h3 class="card-title align-items-start flex-column">
            <span class="card-label fw-bold fs-3 mb-1">Datatables</span>
            <span class="text-muted mt-1 fw-semibold fs-7">For Brand</span>
        </h3>
        <div class="card-toolbar">
            <button type="button" class="btn btn-sm btn-light-primary" data-bs-toggle="modal" data-bs-target="#BrandAddModal">
                <i class="ki-duotone ki-plus fs-2"></i>Add
            </button>
        </div>
    </div>
    <!--end::Header-->
    <!--begin::Body-->
    <div class="card-body py-3">
        <!--begin::Table container-->
        <div class="table-responsive">
            <!--begin::Table-->
            <table id="BrandList" class="table align-middle gs-0 gy-4">
                <!--begin::Table head-->
                <thead>
                    <tr class="fw-bold text-muted bg-light">
                        <th class="ps-4 min-w-325px rounded-start">Brand Name</th>
                        <th class="min-w-125px">CreatedBy</th>
                        <th class="min-w-125px">Created</th>
                        <th class="min-w-200px">UpdatedBy</th>
                        <th class="min-w-200px">Updated</th>
                        <th class="min-w-150px">Edit</th>
                        <th class="min-w-150px">Delete</th>
                    </tr>
                </thead>
                <!--end::Table head-->
            </table>
            <!--end::Table-->
        </div>
        <!--end::Table container-->
    </div>
    <!--begin::Body-->
</div>

@if (CheckPerms.checkpermis(User.GetRole(), ViewBag.Perms, "brand-create"))
{
    @await Html.PartialAsync("~/Views/Brand/Modal/AddModal.cshtml")
}
@if (CheckPerms.checkpermis(User.GetRole(), ViewBag.Perms, "brand-update"))
{
    @await Html.PartialAsync("~/Views/Brand/Modal/EditModal.cshtml")
}
@if (CheckPerms.checkpermis(User.GetRole(), ViewBag.Perms, "brand-delete"))
{
    @await Html.PartialAsync("~/Views/Brand/Modal/DeleteModal.cshtml")
}

@section Scripts {
    @await Html.PartialAsync("~/Views/Brand/JS/ModalAddJS.cshtml")
    @await Html.PartialAsync("~/Views/Brand/JS/ModalEditJS.cshtml")
    <script>
        var BrandTab
        $(document).ready(function () {
            reloadTable();
        });

        function reloadTable(){
            if(!BrandTab){
                BrandTab = $('#BrandList').DataTable({
                    "scrollX": true,
                    "processing": true,
                    "filter": false,
                    "stateSave": true,
                    "responsive": true,
                    "searching": false,
                    "serverSide": true,
                    "dom": 'Bfrtip',
                    "ajax": {
                        "url": "@Url.Action("Profile_Read", "Brand")",
                        "type": "POST",
                        'datatype': 'json',
                    },
                    "columns": [
                        { "data": "name" },
                        { "data": "createdby" },
                        { "data": "created" },
                        { "data": "updatedby" },
                        { "data": "updated" },
                        {
                            "data": "id",
                            "render": function (d, t, f, m) {
                                return "<div><a type='button' class='btn btn-warning btn-sm' onclick='editbrand(" + m.row + ")'>Edit</a></div>";
                            }
                        },
                        {
                            "data": "id",
                            "render": function (d, t, f, m) {
                                return "<div><a type='button' class='btn btn-danger btn-sm' onclick='deletebrand(" + m.row + ")'>Delete</a></div>";
                            }
                        },
                    ],
                });
            } else {
                BrandTab.ajax.url("@Url.Action("Profile_Read", "Brand")").load();
            }
        }
    </script>
}