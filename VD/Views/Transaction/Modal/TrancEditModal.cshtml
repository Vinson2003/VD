<!-- Modal Edit -->
<div class="modal fade" id="TrancEditModal" tabindex="-1" role="dialog" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">

        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">Edit Transaction</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <form id="TrancEditForm" method="post" autocomplete="off">
                    <input type="hidden" class="form-control" id="TrancEditId" name="id" required>

                    <div class="form-row">
                        <div class="form-group col-md-12 mb-3">
                            <label for="Brand">Brand Name</label>
                            <input type="text" class="form-control" id="TrancEdit" name="Name" readonly>
                        </div>
                        <div class="form-group col-md-12 mb-3">
                            <label for="Date">Date</label>
                            <input type="text" class="form-control" id="DateEdit" name="Date" readonly>
                        </div>
                        <div class="form-group col-md-12 mb-3">
                            <label for="Result">Result</label>
                            <input type="text" class="form-control" id="ResultEdit" name="Result" required>
                        </div>
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-outline-success" onclick="submitTrancEdit()">Edit</button>
            </div>

        </div>
    </div>
</div>