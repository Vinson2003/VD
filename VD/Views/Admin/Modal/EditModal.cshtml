<!-- Modal Edit -->
<div class="modal fade" id="AdminEditModal" tabindex="-1" role="dialog" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog modal-lg modal-dialog-centered">

        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">Edit Admin</h5>
                <div class="btn btn-icon btn-sm btn-active-light-warning ms-2" data-bs-dismiss="modal" aria-label="Close">
                    <i class="ki-duotone ki-cross fs-1"><span class="path1"></span><span class="path2"></span></i>
                </div>
            </div>

            <div class="modal-body">
                <form id="AdminEditForm" method="post" autocomplete="off">
                    <input type="hidden" class="form-control" id="AdminEditId" name="id" required>

                    <div class="row">
                        <div class="form-group col-12 col-md-12 mb-3">
                            <label for="Username" class="form-label">Username</label>
                            <input type="text" class="form-control form-control-solid" id="UsernameEdit" name="Username" readonly>
                        </div>
                        <div class="form-group col-12 col-md-12 mb-3">
                            <label for="Email" class="form-label">Email</label>
                            <input type="Email" class="form-control form-control-solid" id="EmailEdit" name="Email" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-12 col-md-12 mb-2">
                            <label for="Status" class="form-label">Status</label>
                            <select class="form-select form-select-solid" id="StatusEdit" name="Status" required>
                                <option selected value="">Choose...</option>
                                <option value="ENABLED">ENABLED</option>
                                <option value="DISABLED">DISABLED</option>
                            </select>
                        </div>
                        <div class="form-group col-12 col-md-12 mb-2">
                            <label for="Role" class="form-label">Role</label>
                            <select asp-items="@ViewBag.RoleList" class="form-select form-select-solid" id="RoleEdit" name="RoleId" required>
                                <option selected value="">Choose...</option>
                            </select>
                        </div>
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-outline-success" onclick="submitAdminEdit()">Edit</button>
            </div>

        </div>
    </div>
</div>