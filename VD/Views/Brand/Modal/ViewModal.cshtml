<div class="modal fade" id="BrandViewModal" tabindex="-1" role="dialog" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog modal-md modal-dialog-centered" role="document">

        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">View Brand</h5>
                <div class="btn btn-icon btn-sm btn-active-light-info ms-2" data-bs-dismiss="modal" aria-label="Close">
                    <i class="ki-duotone ki-cross fs-1"><span class="path1"></span><span class="path2"></span></i>
                </div>
            </div>

            <div class="modal-body">
                <form id="BrandViewForm">
                    <input type="hidden" class="form-control" id="BrandViewId" name="id" required>
                    <div class="row">
                        <div class="col-12 col-md-12 mb-3">
                            <label for="Brand" class="fw-semibold form-label">Brand Name</label>
                            <input type="text" class="form-control form-control-solid" id="BrandNameView" name="Name">
                        </div>
                        <div class="fv-row mb-10 fv-plugins-icon-container">
                            <label class="d-block fw-semibold fs-6 mb-5">
                                <span class="BPicture">Brand Picture</span>
                            </label>
                            <div class="image-input image-input-empty image-input-outline image-input-placeholder" data-kt-image-input="true">
                                <div class="image-input-wrapper w-450px h-250px"></div>
                            </div>
                            <div class="form-text">Allowed file types: png, jpg, jpeg.</div>
                            <div class="fv-plugins-message-container fv-plugins-message-container--enabled invalid-feedback"></div>
                        </div>
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Close</button>
            </div>

        </div>
    </div>
</div>