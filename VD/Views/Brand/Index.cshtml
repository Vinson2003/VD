@using VD.Helper;
@{
    ViewData["Title"] = "Brand";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex flex-column flex-column-fluid">
	<!--begin::Toolbar-->
	<div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
		<!--begin::Toolbar container-->
		<div id="kt_app_toolbar_container" class="app-container container-fluid d-flex flex-stack">
			<!--begin::Page title-->
			<div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
				<!--begin::Title-->
				<h1 class="page-heading d-flex text-dark fw-bold fs-3 flex-column justify-content-center my-0">Tables</h1>
				<!--end::Title-->
				<!--begin::Breadcrumb-->
				<ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
					<!--begin::Item-->
					<li class="breadcrumb-item text-muted">
						<a href="../../demo1/dist/index.html" class="text-muted text-hover-primary">Brand</a>
					</li>
					<!--end::Item-->
				</ul>
				<!--end::Breadcrumb-->
			</div>
			<!--end::Page title-->
		</div>
		<!--end::Toolbar container-->
	</div>
	<!--end::Toolbar-->
	<!--begin::Content-->
	<div id="kt_app_content" class="app-content flex-column-fluid">
		<!--begin::Content container-->
		<div id="kt_app_content_container" class="app-container container-fluid">
			<div class="card mb-5 mb-xl-8">
				<!--begin::Header-->
				<div class="card-header border-0 pt-5">
					<div class="card-toolbar">
						<button type="button" class="btn btn-sm btn-light-primary" data-bs-toggle="modal" data-bs-target="#BrandAddModal">
							<i class="ki-duotone ki-plus fs-2"></i>Add
						</button>
					</div>
				</div>
				<!--end::Header-->
				<!--begin::Body-->
				<div class="card-body py-3">
					<!--begin::Table container-->
					<div class="table-responsive">
						<!--begin::Table-->
						<table class="table align-middle gs-0 gy-4" id="BrandList">
							<!--begin::Table head-->
							<thead>
								<tr class="fw-bold text-muted bg-light">
									<th class="min-w-120px">Brand Name</th>
									<th class="min-w-150px">Createdby</th>
									<th class="min-w-115px">Created</th>
									<th class="min-w-115px">Updatedby</th>
									<th class="min-w-120px">Updated</th>
									<th class="min-w-120px">Update</th>
									<th class="min-w-120px">Delete</th>
								</tr>
							</thead>
							<!--end::Table head-->
						</table>
						<!--end::Table-->
					</div>
					<!--end::Table container-->
				</div>
				<!--begin::Body-->
			</div>
		</div>
		<!--end::Content container-->
	</div>
	<!--end::Content-->
</div>

@if (CheckPerms.checkpermis(User.GetRole(), ViewBag.Perms, "brand-create"))
{
    @await Html.PartialAsync("~/Views/Brand/Modal/AddModal.cshtml")
}
@if(CheckPerms.checkpermis(User.GetRole(), ViewBag.Perms, "brand-update"))
{
    @await Html.PartialAsync("~/Views/Brand/Modal/EditModal.cshtml")
}
@if (CheckPerms.checkpermis(User.GetRole(), ViewBag.Perms, "brand-delete"))
{
    @await Html.PartialAsync("~/Views/Brand/Modal/DeleteModal.cshtml")
}

@section Scripts {
    @await Html.PartialAsync("~/Views/Brand/JS/ModalAddJS.cshtml")
    @await Html.PartialAsync("~/Views/Brand/JS/ModalEditJS.cshtml")
    @await Html.PartialAsync("~/Views/Brand/JS/ModalDeleteJS.cshtml")
    <script>
        var BrandTab
        $(document).ready(function () {
            reloadTable();
        });

        function reloadTable(){
            if(!BrandTab){
                BrandTab = $('#BrandList').DataTable({
                    "scrollX": true,
                    "processing": true,
                    "filter": false,
                    "stateSave": true,
                    "responsive": true,
                    "searching": false,
                    "serverSide": true,
                    "dom": 'Bfrtip',
                    "ajax": {
                        "url": "@Url.Action("Profile_Read", "Brand")",
                        "type": "POST",
                        'datatype': 'json',
                    },
                    "columns": [
                        { "data": "name" },
                        { "data": "createdby" },
                        { "data": "created" },
                        { "data": "updatedby" },
                        { "data": "updated" },
                        {
                            "data": "id",
                            "render": function (d, t, f, m) {
								return "<div><a type='button' class='btn btn-warning btn-sm' onclick='editbrand(" + m.row + ")'><i class='fa-solid fa-pen'></i></a></div>";
                            }
                        },
                        {
                            "data": "id",
                            "render": function (d, t, f, m) {
								return "<div><a type='button' class='btn btn-danger btn-sm' onclick='deletebrand(" + m.row + ")'><i class='fa-solid fa-trash'></i></a></div>";
                            }
                        },
                    ],
                });
            } else {
                BrandTab.ajax.url("@Url.Action("Profile_Read", "Brand")").load();
            }
        }
    </script>
}