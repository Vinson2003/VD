<script>
    function viewbrand(i) {
        if (i >= 0) {
            var data = BrandTab.row(i).data();
            if (data) {
                $('#BrandViewForm #BrandViewId').val(data.id);
                $('#BrandViewForm #BrandNameView').val(data.name);
                $('#BrandViewForm #BrandPictureView').val(data.image);
                $('#BrandViewModal').modal('show');
            }
        }
    }
